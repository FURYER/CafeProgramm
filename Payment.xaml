<Window x:Class="BusinessByJob.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusinessByJob"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Title="Оплата">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TotalPrice" Text="Сумма к оплате: "/>
            <TextBlock x:Name="Requisites" Text="Реквизиты карты: "/>
            <TextBlock x:Name="Money" Text="Сумма на карте: "/>
            <Button Content="Произвести оплату" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
