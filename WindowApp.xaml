                </TabItem>
                <TabItem Foreground="White" Header="Номенклатура" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="Nomenclature" BorderThickness="0" Margin="0" Grid.Row="1" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding name}"/>
                                    <GridViewColumn Header="Вид" DisplayMemberBinding="{Binding type}"/>
                                    <GridViewColumn Header="Артикул" DisplayMemberBinding="{Binding articul}"/>
