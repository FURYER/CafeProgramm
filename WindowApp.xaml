                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <Label Content="Название"/>
                                <TextBox x:Name="NameNomenclature" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <Label Content="Вид"/>
                                <ComboBox x:Name="ListTypes" Width="200" HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Top" Margin="10">
                                <Label Content="Артикул"/>
                                <TextBox x:Name="articulName" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Top" Margin="10">
                                <Label Content="Цена"/>
                                <TextBox x:Name="priceNomenclature" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray" PreviewTextInput="priceNomenclature_PreviewTextInput"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" Margin="10">
                                <Label Content="Изображение"/>
                                <Image Source="Resources/Images/Add.png" Height="25" Width="25" Cursor="Hand" MouseLeftButtonUp="AddImageForNomenclature"/>
                            </StackPanel>
                            <Image x:Name="ImageNomenclature" Grid.Row="5"/>
                            <Button VerticalAlignment="Top" Grid.Row="6" Content="Добавить" Click="Button_Click_1"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Name="ProductFolder" Foreground="White" Header="Продукция" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="ProductsList" BorderThickness="0" Margin="0" Grid.Row="1" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding name}"/>
                                    <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding count}"/>
                                    <GridViewColumn Header="Изображение">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Width="100" Height="100" Source="{Binding img}" MouseEnter="ShowNomenclatureImg" Cursor="Hand"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Column="1" Grid.RowSpan="2" Background="#FF2B2B2F">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                <Label Content="Продукт"/>
                                <ComboBox x:Name="ListNomenclature" Width="200" HorizontalAlignment="Right"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Top" Margin="10">
                                <Label Content="Количество"/>
                                <TextBox x:Name="ProductCount"  Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray" PreviewTextInput="countProduct_PreviewTextInput"/>
                            </StackPanel>
                            <Button VerticalAlignment="Top" Grid.Row="2" Content="Добавить" Click="AddProduct"/>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Name="Orders" Visibility="Collapsed" Header="Заказы" FontWeight="Light" FontSize="20" Foreground="White"  FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid Background="#FF2B2B2F">
                <ListView x:Name="OrderList" SelectionMode="Single" BorderThickness="0" Margin="0" Background="White">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding id}"/>
                            <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding Fullname}"/>
                            <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding status}"/>
                            <GridViewColumn Header="Дата создания" DisplayMemberBinding="{Binding Date}"/>
                            <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalPrice}"/>
                            <GridViewColumn Header="Реквизиты" DisplayMemberBinding="{Binding requisites}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <UserControl x:Name="OrderInfo" Visibility="Hidden">
                    <Grid Background="#FF2B2B2F"/>
                </UserControl>
            </Grid>
        </TabItem>
        <TabItem Name="CreateOrder" Header="Создание заказа" FontWeight="Light" FontSize="20" Foreground="White"  FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid Background="#FF2B2B2F">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Мои заказы"/>
                <ListView x:Name="MyOrderList" Grid.Row="1" Margin="5" Grid.RowSpan="2" Background="White">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding id}"/>
                            <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding status}"/>
                            <GridViewColumn Header="Дата создания" DisplayMemberBinding="{Binding date}"/>
                            <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding totalPrice}"/>
                            <GridViewColumn Header="Реквизиты" DisplayMemberBinding="{Binding requisites}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Label Content="Создание заказа" Grid.Column="1"/>
                <Border Grid.Column="1" Grid.Row="1" Background="#222225" CornerRadius="10" Margin="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="ChooseProducts"/>
                    </ScrollViewer>
                </Border>
                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="10">
                    <Button VerticalAlignment="Top" Width="150" Content="Создать заказ" Click="AddOrder"/>
                    <Label x:Name="TotalPrice" Content="Стоимость: 0 руб." Foreground="Green"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Visibility="Collapsed" Name="Administration" Header="Администрирование" FontWeight="Light" FontSize="20" Foreground="White"  FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <TabControl Style="{StaticResource TabControlChatPanels}" Margin="0" Padding="0" BorderThickness="0" TabStripPlacement="Left" BorderBrush="#FF2B2B2F" Background="#56565d">
                <TabItem Foreground="White" Header="Изменение" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="UsersList" BorderThickness="0" Margin="0" Grid.Row="1" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Имя пользователя" DisplayMemberBinding="{Binding login}"/>
                                    <GridViewColumn Header="Уровень прав" DisplayMemberBinding="{Binding permission}"/>
                                    <GridViewColumn Header="Персона" DisplayMemberBinding="{Binding persona}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Column="1" Grid.RowSpan="2" Background="#FF2B2B2F">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Background="#222225" CornerRadius="10" Margin="5">
                                <StackPanel Margin="0,10,0,10">
                                    <TextBlock Text="Изменение прав" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                        <Label Content="Имя пользователя"/>
                                        <TextBox x:Name="UserNameForPermission" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                        <Label Content="Права"/>
                                        <ComboBox x:Name="ComboListPermissions" Width="200" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Button VerticalAlignment="Top" Content="Изменить" Click="Button_Click_4"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#222225" Grid.Row="1" CornerRadius="10" Margin="5">
                                <StackPanel Margin="0,10,0,10">
                                    <TextBlock Text="Изменение персоны" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                        <Label Content="Имя пользователя"/>
                                        <TextBox x:Name="UserNameForPerson"  Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                                        <Label Content="Персона"/>
                                        <ComboBox x:Name="ComboListPersons" Width="200" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <Button VerticalAlignment="Top" Content="Изменить" Click="Button_Click_5"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Foreground="White" Header="Права и персоны" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
                    <Grid Background="#FF2B2B2F">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListView SelectionMode="Single" Margin="0,0,5,0" x:Name="PersonaList" BorderThickness="0" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Персона"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel Grid.Row="1" Margin="5">
                            <Label Content="Название персоны" Margin="5"/>
                            <TextBox x:Name="namePerson" Width="200" MaxLength="45" Margin="5" TextAlignment="Left" Background="DimGray"/>
                            <Button VerticalAlignment="Top" Margin="5" Content="Добавить" Click="Button_Click_3"/>
                        </StackPanel>
                        <ListView SelectionMode="Single" Margin="5,0,0,0" x:Name="PermissionList" Grid.Column="1" BorderThickness="0" Background="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Право"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                            <Label Margin="5" Content="Название уровня права"/>
                            <TextBox x:Name="namePermission" Margin="5" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
                            <Button Margin="5" VerticalAlignment="Top" Content="Добавить" Click="Button_Click_2"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
    </TabControl>
</Window>
