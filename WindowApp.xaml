<Window x:Class="NewApp.WindowApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewApp"
        mc:Ignorable="d"
        Title="Cafe" WindowStartupLocation="CenterScreen" Width="1280" Height="720" MinWidth="1280" MinHeight="720" Icon="Resources/Images/Logo.png" Closed="Window_Closed" Background="#FF51515A" WindowState="Normal" WindowStyle="ThreeDBorderWindow">
    <Window.Resources>
        <Style x:Key="WindowInfo" TargetType="Window">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="200"/>
        </Style>
        <Style TargetType="{x:Type Ellipse}">
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="Width" Value="64"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ListNotes" TargetType="ListBox">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222225"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0000"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#222225"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222225"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Light"/>
        </Style>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="#0000"/>
            <Setter Property="BorderBrush" Value="#0000"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="TabControlMainPanels" TargetType="TabControl">
            <Style.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" CornerRadius="4,4,0,0" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#222225" />
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="#9c9c9c"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#323236"/>
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3b3b40"/>
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="TabControlChatPanels" TargetType="TabControl">
            <Style.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" CornerRadius="4,4,4,4" Margin="2">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="#9c9c9c"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#323236"/>
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3b3b40"/>
                                        <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <TabControl x:Name="Menu" Margin="0" Style="{StaticResource TabControlMainPanels}" Padding="0" BorderBrush="#0000" Background="#232327" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        <TabItem Name="Main" FontWeight="Light" FontSize="20" Foreground="White" Header="Главная" FontFamily="Bahnschrift">
            <Grid Background="#FF2B2B2F">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Margin="10">
                    <Image Source="Resources/Images/Header.png" Margin="0,0,0,5" Stretch="UniformToFill"/>
                    <TextBlock FontSize="28" TextAlignment="Center" TextWrapping="Wrap">
                        Bikers Пицца - бесплатная доставка еды в Перми: роллы, пицца, суши.
                        <Hyperlink Click="Hyperlink_Click" NavigateUri="https://bikers-pizza.ru/">Bikers PIZZA</Hyperlink> (байкерс пицца) - бесплатная доставка пиццы по Перми.
                        Мы выполняем заказы от 40 минут. Срок поставки больших заказов оговаривается отдельно.
                        Все горячие блюда готовятся сразу после заказа и доставляются в термосумках.
                        Напитки поставляются охлажденными.
                        Вы всегда можете приехать к нам и забрать заказанную пиццу самостоятельно со скидкой 20%.
                        Скидка действует только при самовывозе пиццы, на другие блюда скидка не распространяется.
                    </TextBlock>
                </StackPanel>
                <Image Cursor="Hand" MouseLeftButtonUp="Image_MouseLeftButtonUp_1" Margin="10" Grid.RowSpan="2" Grid.Column="1" Source="Resources/Images/GoogleMap.jpg"/>
            </Grid>
        </TabItem>
        <TabItem Name="ChatTab" Header="Чат" FontWeight="Light" FontSize="20" Foreground="White"  FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <TabControl Name="ChatControl" Style="{StaticResource TabControlChatPanels}" Margin="0" Padding="0" BorderThickness="0" TabStripPlacement="Left" BorderBrush="#FF2B2B2F" Background="#56565d">
