                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="Resources/Images/Update.png" Grid.Row="0" Grid.Column="0" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" Cursor="Hand" Margin="5,5,10,5" MouseLeftButtonUp="UpdateChat"/>
                        <ComboBox x:Name="comboBoxFilter" SelectedIndex="0" VerticalAlignment="Stretch" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" SelectionChanged="ComboBox_SelectionChanged">
                            <TextBlock Text="Все"/>
                            <TextBlock Text="Онлайн"/>
                        </ComboBox>
                        <Border VerticalAlignment="Stretch" Grid.Column="2" HorizontalAlignment="Stretch" Background="#222225">
                            <TextBox x:Name="FindFavourites" TextChanged="FindFavourites_TextChanged"  VerticalAlignment="Stretch" MaxLength="45" VerticalContentAlignment="Center" Foreground="White" Background="#0000" Margin="5" VerticalScrollBarVisibility="Auto" TextAlignment="Left" HorizontalAlignment="Stretch"/>
                        </Border>
                        <Border Background="#222225" CornerRadius="0, 5, 5, 0" Grid.Column="3" VerticalAlignment="Bottom">
                            <Image Margin="5" Source="Resources/Images/Add.png" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" Cursor="Hand"/>
                        </Border>
                        <ListView x:Name="ListFavourites" Grid.Row="1" Grid.ColumnSpan="4">
                            <ListView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Написать" Click="MenuItem_Click_2"/>
                                    <MenuItem Header="Удалить" Click="MenuItem_Click_1"/>
                                </ContextMenu>
                            </ListView.ContextMenu>
                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="Комнаты" FontWeight="Light" FontSize="20" Foreground="White" FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                    <Grid Background="#FF2B2B2F">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ListView x:Name="Chats" SelectionChanged="Chats_SelectionChanged"/>
                        <Grid Grid.Column="2" KeyUp="Grid_KeyUp">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.Background>
                                <ImageBrush ImageSource="Resources/Images/ChatBackground.jpg" Stretch="UniformToFill"/>
                            </Grid.Background>
                            <Label x:Name="ChatWish" Grid.ColumnSpan="3" Grid.RowSpan="2"  Content="Приятного общения." VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Border x:Name="Border1" Margin="5,5,0,5" Visibility="Hidden"  VerticalAlignment="Stretch" Grid.Row="1" HorizontalAlignment="Stretch" CornerRadius="5,0,0,5" Background="#222225">
                                <TextBox x:Name="MessageText" MaxLength="400" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Foreground="White" Background="#0000" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" TextAlignment="Left" HorizontalAlignment="Stretch"/>
                            </Border>
                            <Border x:Name="Border2" Margin="0,5,5,5" Visibility="Hidden" Background="#222225" Grid.Row="1" Grid.Column="1" CornerRadius="0, 5, 5, 0" VerticalAlignment="Bottom">
                                <Image Margin="5" Source="Resources/Images/Add.png" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" Cursor="Hand" MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
                            </Border>
                            <ScrollViewer x:Name="ScrolMessages" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Disabled" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="ListMessages" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#0000" BorderBrush="#0000">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Foreground="White" Name="Profile" FontWeight="Light" FontSize="20" Header="Профиль" FontFamily="Bahnschrift">
            <Grid x:Name="ProfileGrid" Margin="0" Background="#FF2B2B2F" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="textboxSurname" MaxLength="45" HorizontalAlignment="Left" Margin="315,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
                <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="221,69,0,0"/>
                <Button x:Name="buttonEditUserData" Content="Изменить" HorizontalAlignment="Left" Margin="382,216,0,0" VerticalAlignment="Top" Click="buttonEditUserData_Click"/>
                <Label x:Name="LabelPermission" Content="Уровень прав: " HorizontalAlignment="Left" Margin="174,342,0,0" VerticalAlignment="Top"/>
                <Label x:Name="LabelPersona" Content="Персона: " HorizontalAlignment="Left" Margin="217,379,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textboxSecondName" MaxLength="45" HorizontalAlignment="Left" Margin="315,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
                <TextBox x:Name="textboxName" MaxLength="45" HorizontalAlignment="Left" Margin="315,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
                <Label Content="Новый пароль" HorizontalAlignment="Left" Margin="172,472,0,0" VerticalAlignment="Top"/>
                <Label Content="Повторите новый пароль" HorizontalAlignment="Left" Margin="82,525,0,0" VerticalAlignment="Top"/>
                <Button x:Name="ButtonChangePass" Content="Изменить" HorizontalAlignment="Left" Margin="365,576,0,0" VerticalAlignment="Top" Click="ButtonChangePass_Click"/>
                <PasswordBox x:Name="NewPass" Width="200" MaxLength="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,477,0,0"/>
                <PasswordBox x:Name="NewPass2" Width="200" MaxLength="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,530,0,0"/>
                <Button x:Name="buttonEditImg" Margin="62,166,0,0" Content="Изменить" VerticalAlignment="Top" Click="buttonEditImg_Click" HorizontalAlignment="Left"/>
                <Image x:Name="ImgUser" HorizontalAlignment="Left" Margin="62,52,0,0" VerticalAlignment="Top" Stretch="UniformToFill" Height="100" Width="100" Source="Resources/Images/default_user_icon.jpg"/>
                <Label Content="Имя" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="263,125,0,0"/>
                <Label Content="Отчество" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="219,170,0,0"/>
                <Label x:Name="LabelRegisterDate" Content="Дата регистрации: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="136,416,0,0"/>
                <Image Source="Resources/Images/Update.png" Stretch="UniformToFill" VerticalAlignment="Top"  HorizontalAlignment="Left" Height="30" Width="30" Cursor="Hand" Margin="10,10,0,0" MouseLeftButtonUp="UpdateProfile"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Column="1" Grid.Row="0">
                    <Grid x:Name="GridWall" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Border VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" CornerRadius="5,0,0,5" Background="#222225">
                            <TextBox x:Name="NoteBox" MaxLength="400" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Foreground="White" Background="#0000" Margin="5" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" TextAlignment="Left" HorizontalAlignment="Stretch"/>
                        </Border>
                        <Border Background="#222225" CornerRadius="0, 5, 5, 0" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
                            <Image Margin="5" Source="Resources/Images/Add.png" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" MouseUp="Ellipse_MouseUp" Cursor="Hand"/>
                        </Border>
                        <ScrollViewer Margin="5,5,5,5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                            <ListBox x:Name="PanelImgs" Background="#00000000" BorderBrush="#00000000">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Удалить" Click="MenuItem_Click_Delete"/>
                                    </ContextMenu>
                                </ListBox.ContextMenu>
                            </ListBox>
                        </ScrollViewer>
                        <Button Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="buttonEditUserData_Copy" Width="200" Content="Опубликовать" Click="buttonAddNote_Click"/>
                        <Border x:Name="borderNotes" BorderBrush="White" BorderThickness="0,0,0,1" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0" Background="#222225" CornerRadius="5">
                            <TextBox IsReadOnly="True" Margin="5" Text="Записи" HorizontalAlignment="Center" Background="#0000" FontSize="22"/>
                        </Border>
                        <Grid x:Name="GridNotes" Grid.Row="4" Grid.ColumnSpan="2"/>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </TabItem>
        <TabItem Foreground="White" Name="UsersTab" Header="Пользователи" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
            <Grid Background="#FF2B2B2F">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Source="Resources/Images/Update.png" Grid.Row="0" Grid.Column="0" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" Cursor="Hand" Margin="5,5,10,5"/>
                <Border VerticalAlignment="Stretch" Grid.Column="2" HorizontalAlignment="Stretch" Background="#222225">
                    <TextBox x:Name="FindUsers"  VerticalAlignment="Stretch" TextChanged="TextBox_TextChanged" MaxLength="45" VerticalContentAlignment="Center" Foreground="White" Background="#0000" Margin="5" VerticalScrollBarVisibility="Auto" TextAlignment="Left" HorizontalAlignment="Stretch"/>
                </Border>
                <Border Background="#222225" CornerRadius="0, 5, 5, 0" Grid.Column="3" VerticalAlignment="Bottom">
                    <Image Margin="5" Source="Resources/Images/Add.png" Stretch="UniformToFill" VerticalAlignment="Center"  HorizontalAlignment="Center" Height="30" Width="30" Cursor="Hand"/>
                </Border>
                <ListView x:Name="ListUsers" Grid.Row="1" Grid.ColumnSpan="4">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Написать" Click="MenuItem_Click_3"/>
                            <MenuItem Header="Добавить в избранное" Click="MenuItem_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </Grid>
        </TabItem>
        <TabItem Name="Product" Visibility="Collapsed" Header="Продукция" FontWeight="Light" FontSize="20" Foreground="White"  FontFamily="Bahnschrift" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <TabControl Style="{StaticResource TabControlChatPanels}" Margin="0" Padding="0" BorderThickness="0" TabStripPlacement="Left" BorderBrush="#FF2B2B2F" Background="#56565d">
                <TabItem Foreground="White" Header="Виды номенклатуры" FontFamily="Bahnschrift" FontWeight="Light" FontSize="20">
                    <Grid Background="#FF2B2B2F">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ListView Grid.Row="1" BorderThickness="0" Margin="0" Background="White" x:Name="NomenclatureTypes">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding name}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Grid Grid.Column="1" Grid.RowSpan="2" Background="#FF2B2B2F">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                                <Label Content="Название"/>
                                <TextBox x:Name="TypeName" Width="200" MaxLength="45" TextAlignment="Left" Background="DimGray"/>
